            <children>
                <HBox alignment="CENTER_LEFT" layoutX="40" layoutY="10" spacing="50.0">
                    <children>
                        <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../images/iconName.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="labelName" alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="50.0" style="-fx-font-size: 17px; -fx-font-weight: bold; -fx-font-style: italic;" text="Tutor" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    <TextField fx:id="nombreField" layoutX="50.0" layoutY="91.0" promptText="Nombre" />
    <TextField fx:id="descripcionField" layoutX="50.0" layoutY="126.0" promptText="Descripción" />
    <TextField fx:id="diaField" layoutX="50.0" layoutY="162.0" promptText="Día" />
    <TextField fx:id="horaInicioField" layoutX="50.0" layoutY="200.0" promptText="Hora de Inicio HH:mm" />
    <TextField fx:id="horaFinalField" layoutX="50.0" layoutY="235.0" promptText="Hora de Finalización HH:mm" />
