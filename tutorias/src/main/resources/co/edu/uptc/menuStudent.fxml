<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="menuStudent" alignment="TOP_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.ControllerView.StudentControl">
    <children>
        <AnchorPane layoutX="1.0" layoutY="1.0" prefHeight="45.0" prefWidth="307.0" style="-fx-background-color: #FFCC00; -fx-border-color: #D6DBDF;">
            <children>
                <HBox spacing="70.0" alignment="CENTER_LEFT">
                    <children>
                        <ImageView fitHeight="68.0" fitWidth="58.0" pickOnBounds="false" preserveRatio="true">
                            <image>
                                <Image url="@../../../images/iconName.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="labelName" alignment="CENTER_LEFT" text="Juan Perez" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-style: italic;" />
                        <ImageView fitHeight="68.0" fitWidth="58.0" pickOnBounds="false" preserveRatio="true">
                            <image>
                                <Image url="@../../../images/iconCode.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="labelCode" alignment="CENTER_LEFT" text="20221789" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-style: italic;" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <VBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="addTutoring" text="Agregar Tutoria" onAction="#switchToAddTutoring"/>
                        <Button fx:id="deleteTutoring" text="Eliminar Tutoria" onAction="#switchToDeleteTutoring"/>
                        <Button fx:id="showTutoring" text="Mostrar tutorias agendadas" onAction="#switchToShowTutoring"/>
                    </children>
                </VBox>
                <ImageView fitHeight="320.0" fitWidth="372.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/uptc.jpeg" />
                    </image>
                </ImageView>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>


