<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefWidth="591.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.ControllerView.TutorController">
    <children>
        <AnchorPane layoutX="1.0" layoutY="1.0" prefHeight="60.0" prefWidth="307.0" style="-fx-background-color: #FFCC00; -fx-border-color: #D6DBDF;">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="40" layoutY="10" spacing="50.0">
                    <children>
                        <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../images/iconName.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="labelName" alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="195.0" style="-fx-font-size: 17px; -fx-font-weight: bold; -fx-font-style: italic;" text="Tutor" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <VBox alignment="CENTER" spacing="20.0">
            <Label alignment="CENTER" style="-fx-font-size: 16px; -fx-font-weight: bold" text="Bienvenido Tutor" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <VBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Button fx:id="addEvent" onAction="#switchToAddTutoring" prefHeight="30.0" prefWidth="210.0"  text="Agregar nueva tutoría" />
                            <Button fx:id="viewEvents" onAction="#switchToShow" prefHeight="30.0" prefWidth="210.0" text="Ver Tutorias" />
                            <Button fx:id="deleteEvent" onAction="#switchToDelete" prefHeight="30.0" prefWidth="210.0" text="Eliminar Tutoría" />
                            <Button fx:id="updateEvent" onAction="#switchToUpdate" prefHeight="30.0" prefWidth="210.0" text="Modificar Tutoría" />
                        </children>
                    </VBox>
                    <ImageView fitHeight="320.0" fitWidth="372.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../../images/uptc.jpeg" />
                        </image>
                    </ImageView>
                </children>
            </HBox>
        </VBox>
        <Button fx:id="menuPrincipal" onAction="#volverMenuPrincipal" style="-fx-background-color: #FFCC00; -fx-border-color: #D6DBDF; -fx-text-fill: #FFFFFF;" text="Salir" />

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
